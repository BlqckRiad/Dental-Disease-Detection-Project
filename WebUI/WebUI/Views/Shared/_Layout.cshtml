<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diş Hastanesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-tooth text-primary me-2"></i>
                    <span class="fw-bold">Diş Hastanesi</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hizmetlerimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Doktorlarımız</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">İletişim</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a asp-controller="LoginRegister" asp-action="Login" class="btn btn-outline-primary me-2">
                            <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                        </a>
                        <a asp-controller="LoginRegister" asp-action="Register" class="btn btn-primary">
                            <i class="fas fa-user-plus me-1"></i> Kayıt Ol
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3" style="margin-top: 76px;">
        @RenderBody()
    </main>

    <footer class="footer text-muted bg-light border-top">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-tooth me-2"></i>
                        Diş Hastanesi
                    </h5>
                    <p class="mb-0">Sağlıklı gülüşler için yanınızdayız.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="mb-3">İletişim</h5>
                    <p class="mb-1"><i class="fas fa-phone me-2"></i> +90 123 456 7890</p>
                    <p class="mb-1"><i class="fas fa-envelope me-2"></i> info@dishastanesi.com</p>
                    <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i> İstanbul, Türkiye</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="mb-3">Sosyal Medya</h5>
                    <div class="social-links">
                        <a href="#" class="text-muted me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                &copy; @DateTime.Now.Year - Diş Hastanesi - Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
